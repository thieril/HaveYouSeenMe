@model HaveYouSeenMe.Models.PictureModel

@{
    ViewBag.Title = "PictureUpload";
}

<h2>PictureUpload</h2>

@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/Form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="form-group">        
            @Html.LabelFor(model => model.PictureFile)           
            @Html.TextBoxFor(model => model.PictureFile, new { type = "file", @class = "form-control"})
            @Html.ValidationMessageFor(model => model.PictureFile)
    </div>

    <p>
        <input class ="btn btn-default" type="submit" value="Save"/>
    </p>


}

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
    }

